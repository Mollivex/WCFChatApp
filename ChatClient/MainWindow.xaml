<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="513">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="351" Margin="152,10,0,0" Height="33" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="bConDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="33" Width="137"/>
        <ListBox x:Name="lbChat" Margin="0,48,0,0" HorizontalAlignment="Center" Width="493" Grid.RowSpan="2" Height="274" VerticalAlignment="Top"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Width="493" Height="97" Grid.Row="1" TextChanged="tbMessage_TextChanged"/>

    </Grid>
</Window>
